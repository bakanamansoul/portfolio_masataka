<div class="cotainer">
  <div class="row">
    <div class="col-8 offset-1">

    <h2>会員一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= link_to "詳細はこちら",customer_path(customer.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>