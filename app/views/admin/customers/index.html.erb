<h3>会員一覧</h3>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbady>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <% if customer.is_deleted == false %>
      <td class="text-success">有効</td>
      <% else %>
      <td class="text-secondary">退会</td>
      <% end %>
      <td><%= link_to "詳細",admin_customer_path(customer.id) %></td>
    </tr>
    <% end %>
  </tbady>
</table>