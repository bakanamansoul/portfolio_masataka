<h3>会員詳細</h3>
<%= form_with model: @customer, url: admin_customer_path,local:true do |f| %>
<table>
  <tr>
    <td><%= @customer.name %></td>
    <td>
      <%= f.label :is_deleted, "会員ステータス", class: "col-md-2 mt-2" %>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted,"有効", value: false %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted,"退会", value: true %>
      </div>
    </td>
  </tr>
  <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success mt-4 offset-2" %>
  <% end %>
</table>

