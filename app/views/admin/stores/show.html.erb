<h2>店舗詳細</h2>
<table>
  <tr>
    <th><% @store.name %></th>
    <td>
      <% if @store.image.attached? %>
        <%= image_tag @store.image, size: "200x200" %>
      <% else %>
        <%= image_tag "no_image", size: "200x200" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><% @store.genre_name %></td>
  </tr>
  <tr>
    <th>メニュー</th> 
    <td><% @store.menu %></td>
  </tr>
  <tr>
    <th>営業時間</th>
    <td><% @store.business_hours %></td>
  </tr>
  <tr>
    <th>定休日</th>
    <td><% @store.fixed_holiday %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><% @store.postcode %><% @store.address %></td>
  </tr>
  <tr>
    <th>アクセス</th>
    <td><% @store.accsess%></td>
  </tr>
</table>
<p><%= link_to "編集する", edit_admin_store_path(@store.id) %></p>